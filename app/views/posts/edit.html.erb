<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/graduate_schools/#{@laboratory.graduate_school_id}/laboratories/#{@laboratory.id}/posts/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <textarea name="title"><%= @post.title %></textarea>
          <textarea name="body"><%= @post.body %></textarea>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>