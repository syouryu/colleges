<div class="user-new">

  <div class="user-new-logo">
    <h2>新規ユーザー登録</h2>
  </div>

  <div class="user-new-content">
    <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>

    <%= form_tag("/users/create") do%>
      <p>ユーザー名</p>
      <input name="name" value="<% @user.name %>">
        
      <p>メールアドレス</p>
      <input name="email" value="<% @user.name %>">

      <p>パスワード</p>
      <input name="password" type="password" value="<%= @user.password %>">

      <input class="user-new-content-input" type="submit" value="新規登録">
    <% end %>
  </div>

</div>
